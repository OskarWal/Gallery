<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    {{!-- <title>{{ title }}</title> --}}
    <title>Galeria</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>

</head>


<body class="p-3 mb-2 bg-dark text-white">    
<div class="row">
    <nav class="navbar navbar-dark bg-dark">
        <img src="https://i.imgur.com/KejfKMV.png" width="80" height="80" class="d-inline-block align-top" alt="">
        <a class="navbar-brand me-auto mb-2 mb-lg-0" href="/pictures/list">MyWay</a>

        <form class="d-flex" method="POST" action="/pictures/search">
            <input class="form-control me-1" type="searchParam" placeholder="Szukaj" aria-label="Szukaj" name="searchParam">
            <button class="btn btn-outline-danger me-5" type="submit">Szukaj</button>
        </form>
        {{#if user}}
                <li class="nav-item dropdown" style="list-style-type: none;">
                <a class="nav-link dropdown-toggle text-danger" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Witaj, {{user.name}}</a>
                <ul class="dropdown-menu dropdown-menu-end bg-dark" aria-labelledby="navbarDropdown">
                    {{#if user.isSuper}}
                        <li><a class="dropdown-item text-danger" href="/users/addsuper">Stwórz admina</a></li>
                        <li><a class="dropdown-item text-danger" href="/pictures/add">Dodaj zdjęcie</a></li>
                        <li><a class="dropdown-item text-danger" href="/pictures/list/edit">Edytuj zdjęcia</a></li>
                        <li><a class="dropdown-item text-danger" href="/users/list">Użytkownicy</a></li>
                        <li><hr class="dropdown-divider"></li>
                    {{/if}}
                    <li><a class="dropdown-item text-danger" href="/likes/list">Polubione zdjęcia</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-danger" href="/users/logout">Wyloguj</a></li>
                </ul>
            </li>
        {{else}}
        <li class="nav-item dropdown" style="list-style-type: none;">
            <a class="nav-link dropdown-toggle text-danger" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Logowanie</a>
            <ul class="dropdown-menu dropdown-menu-end bg-dark" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item text-danger" href="/users/login">Zaloguj</a></li>
                <li><a class="dropdown-item text-danger" href="/users/add">Zarejestruj</a></li>
            </ul>
        </li>
        {{/if}}
    </nav>
</div>

{{#if alert}}
<div class="container">
  <div class="row">
    <div class="alert alert-{{alert.status}}">
      <strong> {{alert.message}} </strong>
    </div>
  </div>

</div>
{{/if}}



{{{ body }}}
    
</body>

</html>