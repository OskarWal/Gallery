<div class="container bg-dark text-white">
    <div class="card bg-secondary text-white">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <img src="../{{ item.path }}/{{ item.file_name}}" class="img-fluid w-100 h-100" alt="...">
                </div>
            </div>
            <div class="row mt-3 "> 
                {{#if isLiked}}
                <form action="/likes/delete" method="post">
                    <button class="btn btn-danger float-end  w-25" type="submit" class="btn-link">USUŃ Z POLUBIONYCH</button>
                    <input class="form-control" type="hidden" id="id_picture" name="id_picture" value="{{item._id}}">
                </form>
                {{else}}
                <form action="/likes/add" method="post">
                    <button class="btn btn-primary float-end  w-25" type="submit" class="btn-link">POLUB</button>
                    <input class="form-control" type="hidden" id="id_picture" name="id_picture" value="{{item._id}}">
                </form>
                {{/if}}
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <h3 class="box-title mt-2">Szczegóły</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-product ">
                        <tbody>
                            <tr>
                                <td width="390">Tytuł</td>
                                <td>{{item.title}}</td>
                            </tr>
                            <tr>
                                <td>Opis</td>
                                <td>{{item.description}}</td>
                            </tr>
                            <tr>
                                <td>Liczba polubień</td>
                                <td>{{item.like_count}}</td>
                            </tr>
                            <tr>
                                <td>Liczba komentarzy</td>
                                <td>{{item.comment_count}}</td>
                            </tr>
                            <tr>
                                <td>Data dodania</td>
                                <td>{{dateFormat item.date "DD.MM.YYYY"}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


<div class="container my-5 py-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-12 col-lg-10 col-xl-8">
            <div class="card-footer py-3 border-0">
                <div class="d-flex flex-start w-100">
                    <img class="rounded-circle shadow-1-strong me-3" src="https://i.imgur.com/DS5b5Wk.png" alt="avatar"
                        width="40" height="40" />
                    <div class="form-outline w-100">
                        <form action="/comments/add/{{item._id}}" method="post">
                            <textarea class="form-control mt-1 " id="content" name="content" rows="4"
                                placeholder="Napisz komentarz" aria-label="Napisz komentarz"></textarea>
                            <input class="form-control" type="hidden" id="id_picture" name="id_picture"
                                value="{{item._id}}">
                            <div class="float-end mt-2 pt-1">
                                <input type="submit" value="Komentuj" class="btn btn-sm btn-primary">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {{#each commentList}}
            <div class="card mt-1 bg-secondary text-white">
                <div class="card-body">
                    <div class="d-flex flex-start ">
                        <img class="rounded-circle shadow-1-strong me-3" src="https://i.imgur.com/DS5b5Wk.png"
                            alt="avatar" width="60" height="60" />
                        <div>
                            <p class="text-muted small mb-1">
                                {{dateFormat this.date "HH:mm, DD.MM.YYYY"}}
                            </p>
                            <h6 class="fw-bold text-white">{{ this.user }}</h6>
                        </div>
                    </div>
                    <p class="mt-3 mb-4 pb-2">
                        {{ this.content }}
                    </p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>