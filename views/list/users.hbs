<div>

    <div class="row gy-1 gx-2 align-items-center">
        <div class="col-auto">
            <form action="/users/add" method="get">
                <button class="btn btn-danger mb-2" type="submit">Dodaj nowego użytkownika</button>
            </form>
        </div>
        <div class="col-auto">
            <form action="/users/addsuper" method="get">
                <button class="btn btn-danger mb-2" type="submit">Dodaj nowego admina</button>
            </form>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Login</th>
                <th>Email</th>
                <th>Admin</th>
                <th></th>      
            </tr>
        </thead>
        <tbody class="table-dark">
            {{#each usersList}}
                <tr>
                    <td>{{this.login}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.isSuper}}</td>
                    <td>
                        <form action="/users/edit/{{this._id}}" method="get">
                            <button class="btn btn-outline-warning btn-sm float-start" type="submit">Edytuj</button>
                        </form>
                        <form action="/users/delete" method="post">
                            <input type="hidden" id="user_id" name="user_id" value="{{this._id}}"/>
                            <button class="btn btn-outline-danger btn-sm float-end" type="submit">Usuń</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>